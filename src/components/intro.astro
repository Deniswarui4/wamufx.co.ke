---
    let {heading} = Astro.props;
    let {message} = Astro.props;
---

<section class="bg-black text-white">
    <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-0 py-14 md:py-32">
        <div class="text-center max-w-5xl mx-auto">
            <h1 class="mb-6 font-bold text-4xl uppercase">{heading}</h1>
            <p>{message}</p>
        </div>
    </div>
</section>